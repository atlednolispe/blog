    ...
    def show_tags(self):
        return ', '.join(str(t) for t in self.tags.all())

@admin.register(Post, site=custom_site)
class PostAdmin(admin.ModelAdmin):
    ...
    list_display = ('title', 'category', 'show_tags', 'status', 'owner', 'created_time',)

